<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="360dp"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        app:cardCornerRadius="1dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="vertical"
            android:background="@drawable/text_view_shape"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/drName"
                android:textAppearance="?android:textAppearanceLarge"
                android:text="Professor Dr. A. B. M. Yunus"
                android:textColor="#000"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/qualification"
                android:layout_marginTop="3dp"
                android:textSize="10dp"
                android:textAppearance="?android:textAppearanceListItemSmall"
                android:text="MBBS(india),Mphil Path(Hons),FCPS(Hemotology)"
                android:textStyle="italic"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/designation"
                android:layout_marginTop="5dp"
                android:textAppearance="?android:textAppearanceListItemSmall"
                android:text="Professor"
                android:textStyle="normal"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/chamber"
                android:layout_marginTop="5dp"
                android:textAppearance="?android:textAppearanceListItemSmall"
                android:text="Green View Clinic"
                android:textStyle="normal"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/location"
                android:textAppearance="?android:textAppearanceListItemSmall"
                android:text="25/3,Green Road,Dhaka-1205"
                android:layout_marginTop="5dp"
                android:textStyle="normal"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/phone"
                android:textAppearance="?android:textAppearanceListItemSmall"
                android:text="+88028610313"
                android:layout_marginTop="5dp"
                android:textStyle="normal"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
</ScrollView>
