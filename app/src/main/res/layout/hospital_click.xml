<?xml version="1.0" encoding="utf-8"?>

   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.ador.medicalexpress.activities.HospitalClick">

   <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="150dp"
       android:id="@+id/map_con"
       ></FrameLayout>

   <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Direction"
       android:textSize="15dp"
       android:textStyle="bold"
       android:layout_margin="20dp"
       android:layout_gravity="center"
       android:textColor="#ddd"
       android:background="@drawable/button_shape"
       android:onClick="direction"
       />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="     Doctors List ->"
       android:textColor="@color/colorAccent"
       />

<android.support.v7.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:scrollbars="horizontal"
    android:id="@+id/recyclerView"
    >

</android.support.v7.widget.RecyclerView>

   <ScrollView
       xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       >

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
       android:padding="10dp"
       >

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Speciality"
          android:gravity="center"
          android:background="#000"
          android:textColor="#ffff"
          android:id="@+id/spec"
          android:textStyle="bold"
          android:textAppearance="?android:textAppearanceLarge"
          />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Endoscopic,Laparoscopic, Physical Medicine, Neurology, Psychiatry, Cardiac Surgery, Pediatric"
          android:gravity="center"
          android:background="#020"
          android:textColor="#ffd2"
          android:id="@+id/speciality"
          android:textStyle="bold"
          android:layout_below="@+id/spec"
          android:textAppearance="?android:textAppearanceLarge"
          />

      <TextView
          android:layout_width="60dp"
          android:layout_height="wrap_content"
          android:text="Email"
          android:id="@+id/emailText"
          android:textStyle="bold"
          android:layout_below="@+id/speciality"
          android:textAppearance="?android:textAppearanceSmall"
          android:layout_marginTop="20dp"
          />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="info@jbfh.org.bd"
          android:textStyle="bold"
          android:textColor="@color/colorPrimary"
          android:layout_toRightOf="@+id/emailText"
          android:layout_below="@+id/speciality"
          android:textAppearance="?android:textAppearanceSmall"
          android:fontFamily="monospace"
          android:id="@+id/emailId"
          android:layout_marginTop="20dp"
          />


      <TextView
          android:layout_width="60dp"
          android:layout_height="wrap_content"
          android:text="Website"
          android:id="@+id/web"
          android:layout_below="@+id/emailId"
          android:textAppearance="?android:textAppearanceSmall"
          android:textStyle="bold"
          android:layout_marginTop="20dp"
          />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="http://www.jbfh.org.bd"
          android:layout_toRightOf="@+id/web"
          android:layout_below="@+id/emailId"
          android:textColor="@color/colorPrimary"
          android:textAppearance="?android:textAppearanceSmall"
          android:fontFamily="monospace"
          android:textStyle="bold"
          android:id="@+id/webId"
          android:layout_marginTop="20dp"
          />

   </RelativeLayout>

   </ScrollView>

</LinearLayout>